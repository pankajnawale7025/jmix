<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://categoryListView.title"
      focusComponent="categoriesDataGrid">
    <data>
        <collection id="categoriesDc"
                    class="com.company.jmixpractise.dto.Category">
            <loader id="categoriesDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="categoriesDataGrid.create"/>
            <button id="editBtn" action="categoriesDataGrid.edit"/>
            <button id="excludeBtn" action="categoriesDataGrid.exclude"/>
            <button id="readBtn" action="categoriesDataGrid.read"/>
            <button id="removeBtn" action="categoriesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="categoriesDl"/>
        </hbox>
        <dataGrid id="categoriesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="categoriesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="exclude" type="list_exclude"/>
                <action id="read" type="list_read"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="id"/>
                <column property="label"/>
                <column property="auditorEmail"/>
                <column property="auditorEmailMonetaryLow"/>
                <column property="auditorEmailMonetaryMiddle"/>
                <column property="auditorEmailMonetaryHigh"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
